doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Desafio 11
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous")
    body(style="background-color: #34495E;")
        div(class="container" style="display:flex;flex-direction:column;justify-content:center;")
            h1(style="text-align: center;color:white;")="Vista de Productos"
            div(style="border:rgb(0, 204, 255) solid 1px;padding:10px;border-radius:10px;display:flex;align-items:center;justify-content: center;align-self:center;width: 650px;")
                table(class="table table-dark table-striped")
                    thead 
                        tr
                            th="Nombre"
                            th="Precio"
                            th(style="text-align: center;")="Foto"
                    tbody 
                            each item in productos
                                tr
                                    td=item.title
                                    td=item.price
                                    td(style="text-align: center;")
                                        img(width="40px" src=item.thumbnail alt="product_img")
                            else 
                                tr
                                    td(colspan="3" style="text-align: center;")
                                        b="NO SE ENCONTRARON PRODUCTOS"
            div(style="display:flex;justify-content: center;align-self:center;width: 650px;margin-top:15px;")
                a(type="button" class="btn btn-info" style="width: 650px;display:block;" href="/api/productos/nuevo")="Agregar Producto"

